{
   "name": "ioa",
   "version": "13.0.1",
   "description": "Node.js 多应用水平扩展、组件化框架",
   "keywords": [
      "koa",
      "ioa",
      "loader"
   ],
   "type": "module",
   "main": "./dist/index.js",
   "module": "./dist/index.js",
   "exports": {
      ".": "./dist/index.js",
      "./*": "./dist/*"
   },
   "types": "types/index.d.ts",
   "scripts": {
      "start": "node ./index.js",
      "dev": "tsc --watch",
      "build": "tsc",
      "build:types": "tsc --emitDeclarationOnly --declaration --outDir ./types/",
      "swc": "swc ./src/* -d ./dist && node ./dist/index.js",
      "test": "jtm"
   },
   "dependencies": {
      "consoln": "^3.0.5"
   },
   "devDependencies": {
      "@ioa/config": "^13.0.0",
      "@ioa/koa": "^13.0.1",
      "@koa/cors": "^3.3.0",
      "@types/node": "^17.0.23",
      "axios": "^0.21.1",
      "typea": "^7.2.0"
   },
   "files": [
      "dist",
      "types",
      "README.md"
   ],
   "license": "ISC",
   "engines": {
      "node": ">= 16.0.0"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/ioajs/ioa.git"
   }
}
